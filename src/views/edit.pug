extends base

block content 
    form(method="POST")
        input(placeholder="Title", value=video.title, required, type="text", name="title" , minLength: 5)
        input(placeholder="Description", value=video.description, required, type="text", name="description" maxLength: 100)
        input(placeholder="Hashtags, separated by comma.", value=video.hashtags.join(), required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")